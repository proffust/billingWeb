<%= form_with scope: :nat, url: nats_path, local: true do |new_nat_form| %>
<div id="leftcol">
<p>
  <%= label_tag(:name, "Имя правила") %>
  <%= new_nat_form.text_field :name %>
</p>
<p>
  <%= label_tag(:ext_port, "Внешний порт") %>
  <%= new_nat_form.text_field :ext_port %>
</p>
<p>
  <%= label_tag(:int_port, "Внутренний порт") %>
  <%= new_nat_form.text_field :int_port %>
</p>
<p>
  <%= label_tag(:int_ip, "Внутренний IP") %>
  <%= new_nat_form.text_field :int_ip %>
</p>
  <%= new_nat_form.submit %>
</div>

<% end %>
