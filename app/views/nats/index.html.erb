<h1>Все наты</h1>
<%= link_to 'Добавить Нат', new_nat_path %>
<table>
  <tr>
    <th>Имя</th>
    <th>Внешний порт</th>
    <th>Внутренний порт</th>
    <th>Внутренний IP</th>
    <th>Состояние</th>
    <th></th>
    <th></th>
    <th></th>

  </tr>

  <% @nats.each do |nat| %>
    <% if nat.state %>
      <tr bgcolor=green>
    <% else %>
      <tr bgcolor=red>
    <% end %>

    <td><%= nat.name %></td>
    <td><%= nat.ext_port %></td>
    <td><%= nat.int_port %></td>
    <td><%= nat.int_ip %></td>
    <% if nat.state %>
      <td><%= link_to 'Выключить', deactivate_nat_path(nat) %></td>
    <% else %>
      <td><%= link_to 'Включить', activate_nat_path(nat) %></td>
    <% end %>
    <td><%= link_to 'Редактировать', edit_nat_path(nat) %></td>
    <td><%= link_to 'Удалить', nat,:method => :delete,
                  data: { confirm: "Are you sure?" }%>
    </td>
    </tr>
  <% end %>
</table>
